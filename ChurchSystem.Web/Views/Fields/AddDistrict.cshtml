@model ChurchSystem.Web.Data.Entities.District

@{
    ViewData["Title"] = "Add District";
}

<h2>Add</h2>

<h4>District</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDistrict">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdField" />

            <partial name="_District" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.IdField" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
