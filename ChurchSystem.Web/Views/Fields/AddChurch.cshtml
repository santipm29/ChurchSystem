@model ChurchSystem.Common.Entities.Church

@{
    ViewData["Title"] = "Add Church";
}

<h2>Add</h2>

<h4>Church</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddChurch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDistrict" />

            <partial name="_Church" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="DetailsDistrict" asp-route-id="@Model.IdDistrict" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
